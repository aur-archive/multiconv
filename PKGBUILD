pkgname=multiconv
pkgver=0.1
pkgrel=2
pkgdesc="A simple script to convert multi iso files to UTF-8"
url='http://ribemont.francois.free.fr/'
arch=('i686' 'x86_64')
license=('GPL')
source=("http://ribemont.francois.free.fr/scripts/${pkgname}-${pkgver}.tar.gz")
md5sums=('c6743797c848539a57e692fac15a638e')

build() {
    mkdir -p $pkgdir/usr/bin
    mv multiconv $pkgdir/usr/bin
}

